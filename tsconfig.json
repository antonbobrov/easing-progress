{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES6",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "moduleResolution": "Node",
    "skipLibCheck": true,
    "strict": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true
  },
  "include": ["src", "**/*.ts"],
  "exclude": ["node_modules", "lib"]
}